<UserControl x:Class="WpfUI.Controls.TimeInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="80">
    <Grid>
        <TextBox x:Name="txtTime" Text="{Binding GlobalsViewModel.TestTime}" Width="80" MaxLength="5" PreviewTextInput="TextBox_PreviewTextInput"/>

    </Grid>
</UserControl>
