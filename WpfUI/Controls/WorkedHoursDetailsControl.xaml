<UserControl x:Class="WpfUI.Controls.WorkedHoursDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" FontWeight="Bold">Employee</Label>
        <!--<TextBox Margin="2" Grid.Column="1" Grid.Row="1" Text="{Binding SelectedWorkedHours.emp_code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
        <ComboBox Grid.Column="1" Grid.Row="1" 
               SelectedItem="{Binding SelectedWorkedHours.Employee}"
               SelectedIndex= "{Binding SelectedEmployeeId}"
               SelectedValue="emp_code"
               ItemsSource="{Binding Employees,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               DisplayMemberPath="display_name"
               Margin="2"/>
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" FontWeight="Bold">Client</Label>
        <!--<StackPanel Margin="2" Grid.Column="1" Grid.Row="2">
            <TextBox  Text="{Binding SelectedWorkedHours.clt_code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>-->
        <ComboBox Grid.Column="1" Grid.Row="2" 
           x:Name="ComboBoxClients"
           SelectedItem="{Binding SelectedWorkedHours.Client}"
           SelectedIndex= "{Binding SelectedClientId}"
           SelectedValue="clt_code"
           ItemsSource="{Binding Clients,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           DisplayMemberPath="clt_code"
           Margin="2"/>
        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" FontWeight="Bold">Job</Label>
        <!--<StackPanel Margin="2" Grid.Column="1" Grid.Row="2">
           <TextBox  Text="{Binding SelectedWorkedHours.clt_code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
       </StackPanel>-->
        <ComboBox Grid.Column="1" Grid.Row="3" 
          x:Name="ComboBoxJobs"
          SelectedItem="{Binding SelectedWorkedHours.Job}"
          ItemsSource="{Binding JobsClients,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          SelectedValue="job_name"
          DisplayMemberPath="job_name"
          Margin="2"/>
        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" FontWeight="Bold">Notes</Label>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="2" Text="{Binding SelectedWorkedHours.notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="true" TextWrapping="Wrap"/>
           <Label Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left" FontWeight="Bold">Date</Label>
        <StackPanel Grid.Column="1" Grid.Row="5" Margin="2" Orientation="Horizontal">
            <TextBox  Text="{Binding SelectedWorkedHours.date_worked_total_displaystring, Mode=OneWay}" IsEnabled="True" HorizontalAlignment="Stretch" Width="105"/>
            <DatePicker x:Name="DatePicker" />
        </StackPanel>
        <Label Grid.Column="0" Grid.Row="6" HorizontalAlignment="Left" FontWeight="Bold">Start -> End</Label>
        <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal">
            <TextBox Text="{Binding SelectedWorkedHours.time_start_displaystring, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50" Margin="2 0 0 0"/>
            <TextBox Text="{Binding SelectedWorkedHours.time_end_displaystring, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50" Margin="5 0 0 0"/>
        </StackPanel>
        <Label Grid.Column="0" Grid.Row="8" HorizontalAlignment="Left" FontWeight="Bold">Worked hours</Label>
        <TextBox Grid.Column="1" Grid.Row="8" Margin="2" Text="{Binding SelectedWorkedHours.hours_worked_display, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"/>
        <StackPanel Grid.Column="1" Grid.Row="9"  Orientation="Horizontal">
            <Button Margin="2" 
                    Width="40" 
                    Height="20" 
                    Content="Add" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Command="{Binding AddCommand}">
            </Button>
            <Button Margin="2" 
                    Width="40" 
                    Height="20" 
                    Content="Del" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Command="{Binding DeleteCommand}">
            </Button>
        </StackPanel>
    </Grid>

</UserControl>
